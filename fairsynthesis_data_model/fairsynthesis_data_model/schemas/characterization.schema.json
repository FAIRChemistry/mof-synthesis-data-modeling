{
  "$defs": {
    "CharacterizationEntry": {
      "title": "CharacterizationEntry",
      "properties": {
        "Metadata": {
          "$ref": "#/$defs/Metadata"
        },
        "Characterization": {
          "properties": {
            "pxrd": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/pxrd"
              }
            },
            "weight": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/weighing"
              }
            },
            "purity": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/purity"
              }
            },
            "components": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "enum": [
                      "MOCOF-1",
                      "COF-366-Co",
                      "unknown"
                    ]
                  },
                  "molar_fraction": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 100,
                    "description": "molar fraction of the component in percentage"
                  }
                },
                "required": [
                  "molar_fraction",
                  "name"
                ]
              }
            }
          },
          "required": [
            "pxrd",
            "weight"
          ],
          "type": "object"
        }
      },
      "required": [
        "Metadata",
        "Characterization"
      ],
      "type": "object"
    },
    "Metadata": {
      "properties": {
        "_description": {
          "type": "string",
          "description": "Experiment code",
          "pattern": "KE-\\d\\d\\d|S-\\d"
        }
      },
      "required": [
        "_description"
      ],
      "type": "object"
    },
    "pxrd": {
      "properties": {
        "_relative_file_path": {
          "format": "iri",
          "type": "string"
        },
        "_x-ray_source": {
          "$ref": "#/$defs/_x-ray_source"
        },
        "sample_holder": {
          "$ref": "#/$defs/SampleHolder"
        },
        "other_metadata": {
          "type": "string"
        }
      },
      "required": [
        "_relative_file_path",
        "_x-ray_source",
        "sample_holder"
      ],
      "title": "PXRD",
      "type": "object"
    },
    "SampleHolder": {
      "properties": {
        "_diameter": {
          "$ref": "#/$defs/Quantity"
        },
        "_type": {
          "type": "string",
          "enum": [
            "HILGENBERG_GLASS_NO_14_CAPILLARY",
            "KAPTON_FILMS"
          ]
        }
      },
      "type": "object",
      "required": [
        "_diameter",
        "_type"
      ]
    },
    "_x-ray_source": {
      "enum": [
        "Co Kα1",
        "Cu Kα1"
      ],
      "type": "string"
    },
    "weighing": {
      "properties": {
        "_weight": {
          "$ref": "#/$defs/Quantity"
        }
      },
      "required": [
        "_weight"
      ],
      "title": "weighing",
      "type": "object"
    },
    "purity": {
      "title": "purity",
      "type": "object",
      "properties": {
        "_purity": {
          "type": "boolean"
        }
      }
    },
    "Quantity": {
      "title": "Quantity",
      "properties": {
        "Unit": {
          "$ref": "#/$defs/Unit"
        },
        "Value": {
          "type": "number"
        }
      },
      "type": "object",
      "required": [
        "Unit",
        "Value"
      ]
    },
    "Unit": {
      "enum": [
        "microgram",
        "milligram",
        "gram",
        "millimeter"
      ],
      "type": "string"
    }
  },
  "properties": {
    "ProductCharacterization": {
      "items": {
        "$ref": "#/$defs/CharacterizationEntry"
      },
      "type": "array"
    }
  },
  "required": [
    "ProductCharacterization"
  ],
  "title": "characterization",
  "type": "object",
  "description": "characterization data and analysis results of products from the MOF synthesis test cases"
}