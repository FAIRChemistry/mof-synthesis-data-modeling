{
  "$defs": {
    "CharacterizationEntry": {
      "title": "CharacterizationEntry",
      "properties": {
        "ExperimentId": {
          "type": "string"
        },
        "Characterization": {
          "properties": {
            "Pxrd": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/PxrdMetadata"
              }
            },
            "Weight": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/Weighing"
              }
            }
          },
          "required": [
            "Pxrd",
            "Weight"
          ],
          "type": "object"
        },
        "AnalysisResults": {
          "type": "object",
          "properties": {
            "Components": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "Name": {
                    "type": "string",
                    "enum": [
                      "MOCOF-1",
                      "COF-366-Co",
                      "unknown"
                    ]
                  },
                  "Molar_fraction": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 100,
                    "description": "molar fraction of the component in percentage"
                  },
                  "Yield": {
                    "type": "integer",
                    "description": "yield of the component in percentage"
                  },
                  "CrystallinePhases": {
                    "type": "string"
                  }
                },
                "required": [
                  "Name",
                  "Molar_fraction"
                ]
              }
            }
          }
        }
      },
      "required": [
        "Characterization",
        "ExperimentId"
      ],
      "type": "object"
    },
    "PxrdMetadata": {
      "properties": {
        "Relative_file_path": {
          "format": "iri",
          "type": "string"
        },
        "X-ray_source": {
          "$ref": "#/$defs/X-ray_source"
        },
        "Sample_holder": {
          "$ref": "#/$defs/SampleHolder"
        },
        "Other_metadata": {
          "type": "string"
        }
      },
      "required": [
        "Relative_file_path",
        "X-ray_source",
        "Sample_holder"
      ],
      "title": "PXRD",
      "type": "object"
    },
    "SampleHolder": {
      "properties": {
        "Diameter": {
          "$ref": "#/$defs/Quantity"
        },
        "Type": {
          "$ref": "#/$defs/SampleHolderType"
        }
      },
      "type": "object",
      "required": [
        "Type",
        "Diameter"
      ]
    },
    "X-ray_source": {
      "enum": [
        "Co Kα1",
        "Cu Kα1"
      ],
      "type": "string"
    },
    "Weighing": {
      "properties": {
        "Weight": {
          "$ref": "#/$defs/Quantity"
        }
      },
      "required": [
        "Weight"
      ],
      "title": "weighing",
      "type": "object"
    },
    "Quantity": {
      "title": "Quantity",
      "properties": {
        "Unit": {
          "$ref": "#/$defs/Unit"
        },
        "Value": {
          "type": "number"
        }
      },
      "type": "object",
      "required": [
        "Value",
        "Unit"
      ]
    },
    "Unit": {
      "enum": [
        "microgram",
        "milligram",
        "gram",
        "millimeter",
        "centimeter",
        "meter"
      ],
      "type": "string"
    },
    "SampleHolderType": {
      "title": "SampleHolderType",
      "type": "string",
      "enum": [
        "HILGENBERG_GLASS_NO_14_CAPILLARY",
        "KAPTON_FILMS"
      ]
    }
  },
  "properties": {
    "ProductCharacterization": {
      "items": {
        "$ref": "#/$defs/CharacterizationEntry"
      },
      "type": "array"
    }
  },
  "required": [
    "ProductCharacterization"
  ],
  "title": "Characterization",
  "type": "object",
  "description": "characterization data and analysis results of products from the MOF synthesis test cases"
}