{
  "$defs": {
    "CharacterizationEntry": {
      "title": "CharacterizationEntry",
      "properties": {
        "ExperimentId": {
          "type": "string"
        },
        "Characterization": {
          "properties": {
            "Pxrd": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/PxrdMetadata"
              }
            },
            "Weight": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/Weighing"
              }
            }
          },
          "required": [
            "Pxrd",
            "Weight"
          ],
          "type": "object"
        }
      },
      "required": [
        "Characterization",
        "ExperimentId"
      ],
      "type": "object"
    },
    "PxrdMetadata": {
      "properties": {
        "RelativeFilePath": {
          "format": "iri",
          "type": "string"
        },
        "XRaySource": {
          "$ref": "#/$defs/X-ray_source"
        },
        "SampleHolder": {
          "$ref": "#/$defs/SampleHolder"
        },
        "OtherMetadata": {
          "type": "string"
        }
      },
      "required": [
        "RelativeFilePath",
        "XRaySource",
        "SampleHolder"
      ],
      "title": "PXRD",
      "type": "object"
    },
    "SampleHolder": {
      "properties": {
        "Diameter": {
          "$ref": "#/$defs/Quantity"
        },
        "Type": {
          "$ref": "#/$defs/SampleHolderType"
        }
      },
      "type": "object",
      "required": [
        "Type",
        "Diameter"
      ]
    },
    "X-ray_source": {
      "enum": [
        "Co Kα1",
        "Cu Kα1"
      ],
      "type": "string"
    },
    "Weighing": {
      "properties": {
        "Weight": {
          "$ref": "#/$defs/Quantity"
        }
      },
      "required": [
        "Weight"
      ],
      "title": "weighing",
      "type": "object"
    },
    "Quantity": {
      "title": "Quantity",
      "properties": {
        "Unit": {
          "$ref": "#/$defs/Unit"
        },
        "Value": {
          "type": "number"
        }
      },
      "type": "object",
      "required": [
        "Value",
        "Unit"
      ]
    },
    "Unit": {
      "enum": [
        "microgram",
        "milligram",
        "gram",
        "millimeter",
        "centimeter",
        "meter"
      ],
      "type": "string"
    },
    "SampleHolderType": {
      "title": "SampleHolderType",
      "type": "string",
      "enum": [
        "HILGENBERG_GLASS_NO_14_CAPILLARY",
        "KAPTON_FILMS"
      ]
    }
  },
  "properties": {
    "ProductCharacterization": {
      "items": {
        "$ref": "#/$defs/CharacterizationEntry"
      },
      "type": "array"
    }
  },
  "required": [
    "ProductCharacterization"
  ],
  "title": "Characterization",
  "type": "object",
  "description": "characterization data and analysis results of products from the MOF synthesis test cases"
}